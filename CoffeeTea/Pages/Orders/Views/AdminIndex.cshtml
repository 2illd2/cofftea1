@model List<CoffeeTea.Pages.Orders.Models.OrderListItemVm>
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Управление заказами";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold"><i class="fas fa-shopping-cart me-2"></i> Управление заказами</h1>
        <a href="/admin" class="btn btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-left me-1"></i> В админ-панель
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 rounded-4 shadow-sm">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p>Заказов пока нет</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle table-hover">
                        <thead>
                            <tr>
                                <th>ID заказа</th>
                                <th>Клиент</th>
                                <th>Сумма</th>
                                <th>Статус</th>
                                <th>Дата создания</th>
                                <th class="text-end">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(o => o.created_at))
                            {
                                <tr>
                                    <td>
                                        <strong>#@order.id</strong>
                                    </td>
                                    <td>@order.Client</td>
                                    <td>
                                        <span class="fw-bold text-success">@order.total.ToString("N2") ₽</span>
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = order.Status switch
                                            {
                                                "Новый" => "bg-primary",
                                                "В обработке" => "bg-info",
                                                "Отправлен" => "bg-warning text-dark",
                                                "Завершён" => "bg-success",
                                                "Отменён" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@order.Status</span>
                                    </td>
                                    <td>
                                        <small>@order.created_at.ToString("dd.MM.yyyy HH:mm")</small>
                                    </td>
                                    <td class="text-end">
                                        <a href="/orders/@order.id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i> Просмотр
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="fw-bold">
                                <td colspan="2">ВСЕГО ЗАКАЗОВ:</td>
                                <td colspan="4">@Model.Count</td>
                            </tr>
                            <tr class="fw-bold">
                                <td colspan="2">ОБЩАЯ СУММА:</td>
                                <td colspan="4" class="text-success">@Model.Sum(o => o.total).ToString("N2") ₽</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Статистика по статусам -->
    @if (Model.Count > 0)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 rounded-4 shadow-sm">
                    <div class="card-header bg-transparent border-0 pt-4">
                        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i> Статистика по статусам</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var statusGroup in Model.GroupBy(o => o.Status))
                            {
                                <div class="col-md-4 col-lg-2">
                                    <div class="text-center p-3 rounded" style="background-color: #f8f9fa;">
                                        <div class="h2 mb-0">@statusGroup.Count()</div>
                                        <small class="text-muted">@statusGroup.Key</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

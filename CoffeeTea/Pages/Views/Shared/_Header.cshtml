<header class="navbar navbar-expand-lg navbar-light bg-white border-bottom fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary fs-3" href="/">
            <i class="fas fa-mug-hot me-2"></i> Coffee & Tea
        </a>

        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <nav id="topnav" class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link fw-semibold text-dark px-3" href="/catalog">
                        <i class="fas fa-store me-1"></i> Каталог
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold text-dark px-3" href="/articles">
                        <i class="fas fa-book me-1"></i> Статьи
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold text-dark px-3" href="/cart">
                        <i class="fas fa-shopping-cart me-1"></i> Корзина
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/chat" class="text-dark">
                        <i class="fas fa-comments fa-lg"></i>
                    </a>
                </li>

                @* --- Выпадающее меню администратора --- *@
                @if (User.IsInRole("admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold text-danger px-3"
                           href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-tools me-1"></i> Админ-панель
                        </a>
                        <ul class="dropdown-menu shadow border-0 rounded-3 mt-2" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" href="/admin"><i class="fas fa-home me-2 text-secondary"></i> Главная админ-панель</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/admin/products"><i class="fas fa-box me-2 text-secondary"></i> Продукты</a></li>
                            <li><a class="dropdown-item" href="/admin/orders"><i class="fas fa-shopping-cart me-2 text-secondary"></i> Заказы</a></li>
                            <li><a class="dropdown-item" href="/admin/article-categories"><i class="fas fa-layer-group me-2 text-secondary"></i> Категории статей</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/admin/audit"><i class="fas fa-clipboard-list me-2 text-info"></i> Журнал аудита</a></li>
                            <li><a class="dropdown-item" href="/admin/backup"><i class="fas fa-database me-2 text-danger"></i> Резервное копирование</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/admin/settings"><i class="fas fa-cogs me-2 text-secondary"></i> Настройки</a></li>
                        </ul>
                    </li>
                }

                @* --- Выпадающее меню консультанта --- *@
                else if (User.IsInRole("consultant"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold text-success px-3"
                           href="#" id="consultantDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-headset me-1"></i> Консультант
                        </a>

                        <ul class="dropdown-menu shadow border-0 rounded-3 mt-2" aria-labelledby="consultantDropdown">
                            <li>
                                <a class="dropdown-item" href="/consultant/articles">
                                    <i class="fas fa-newspaper me-2 text-secondary"></i> Статьи и новости
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/consultant/orders">
                                    <i class="fas fa-clipboard-check me-2 text-secondary"></i> Заказы клиентов
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/consultant/reviews">
                                    <i class="fas fa-star me-2 text-secondary"></i> Отзывы и оценки
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item" href="/consultant/statistics">
                                    <i class="fas fa-chart-line me-2 text-secondary"></i> Статистика
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>

            <div class="d-flex gap-3 align-items-center">
                <a href="/favorites" class="text-dark"><i class="fas fa-heart fa-lg"></i></a>

                <div class="vr d-none d-lg-block"></div>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-outline-primary rounded-pill px-4" href="/profile">
                        <i class="fas fa-user-circle me-2"></i> Личный кабинет
                    </a>

                    <form class="d-inline" method="post" action="/logout">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary rounded-pill px-4">
                            <i class="fas fa-sign-out-alt me-2"></i> Выйти
                        </button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-primary rounded-pill px-4" href="/login">
                        <i class="fas fa-sign-in-alt me-2"></i> Войти
                    </a>
                    <a class="btn btn-primary rounded-pill px-4" href="/register">
                        <i class="fas fa-user-plus me-2"></i> Регистрация
                    </a>
                }
            </div>
        </nav>
    </div>
</header>

@model CoffeeTea.Pages.Articles.Controllers.PagedResult<CoffeeTea.Pages.Articles.Models.ArticlePublicVm>
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Статьи";
}

<div class="container py-5">
    <h1 class="h3 fw-bold mb-4"><i class="fas fa-newspaper me-2"></i> Статьи</h1>

    <div class="row g-4">
        @foreach (var a in Model.Items)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden position-relative">
                    <img src="@(a.CoverImageUrl ?? "/img/placeholder.webp")"
                         alt="@a.Title" class="w-100" style="height:200px;object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="fw-bold mb-2">@a.Title</h5>
                        @if (!string.IsNullOrWhiteSpace(a.Summary))
                        {
                            <p class="text-muted small">@a.Summary</p>
                        }
                        <div class="text-muted small mt-2">
                            <i class="far fa-calendar-alt me-1"></i>
                            @(a.PublishedAt?.ToLocalTime().ToString("d MMM yyyy") ?? "")
                        </div>
                    </div>

                    <a href="/articles/@a.Slug" class="stretched-link" aria-label="Подробнее"></a>

                </div>
            </div>


        }
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-light border rounded-4 mt-4 text-center">
            Пока нет опубликованных статей.
        </div>
    }
</div>

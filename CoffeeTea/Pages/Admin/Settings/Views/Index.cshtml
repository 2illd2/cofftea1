@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Настройки системы";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold"><i class="fas fa-cog me-2"></i> Настройки системы</h1>
        <a href="/admin" class="btn btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-left me-1"></i> В админ-панель
        </a>
    </div>

    <!-- Системная информация -->
    <div class="card border-0 rounded-4 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0 pt-4">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Системная информация</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="p-3 rounded" style="background-color: #f8f9fa;">
                        <label class="text-muted small mb-1">Среда выполнения</label>
                        <div class="fw-bold">@ViewBag.Environment</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 rounded" style="background-color: #f8f9fa;">
                        <label class="text-muted small mb-1">API Base URL</label>
                        <div class="fw-bold">@ViewBag.ApiBaseUrl</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 rounded" style="background-color: #f8f9fa;">
                        <label class="text-muted small mb-1">.NET Version</label>
                        <div class="fw-bold">@Environment.Version</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 rounded" style="background-color: #f8f9fa;">
                        <label class="text-muted small mb-1">Операционная система</label>
                        <div class="fw-bold">@Environment.OSVersion.Platform</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Управление системой -->
    <div class="card border-0 rounded-4 shadow-sm mb-4">
        <div class="card-header bg-transparent border-0 pt-4">
            <h5 class="mb-0"><i class="fas fa-tools me-2"></i> Управление системой</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-broom text-warning me-2"></i>
                                Очистка старых корзин
                            </h6>
                            <p class="card-text small text-muted">
                                Удаляет неактивные корзины старше 30 дней для оптимизации БД
                            </p>
                            <form method="post" action="/api/admin/audit/clean-old-carts" onsubmit="return confirm('Очистить старые корзины?');">
                                <button type="submit" class="btn btn-sm btn-outline-warning rounded-pill w-100">
                                    <i class="fas fa-trash me-1"></i> Очистить корзины
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-database text-danger me-2"></i>
                                Резервное копирование
                            </h6>
                            <p class="card-text small text-muted">
                                Создание резервной копии базы данных
                            </p>
                            <a href="/admin/backup" class="btn btn-sm btn-outline-danger rounded-pill w-100">
                                <i class="fas fa-save me-1"></i> Управление бэкапами
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-clipboard-list text-info me-2"></i>
                                Журнал аудита
                            </h6>
                            <p class="card-text small text-muted">
                                Просмотр логов изменений и активности пользователей
                            </p>
                            <a href="/admin/audit" class="btn btn-sm btn-outline-info rounded-pill w-100">
                                <i class="fas fa-eye me-1"></i> Открыть журнал
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-chart-line text-success me-2"></i>
                                Статистика
                            </h6>
                            <p class="card-text small text-muted">
                                Топ продаваемых товаров и аналитика
                            </p>
                            <a href="/admin/audit/top-products" class="btn btn-sm btn-outline-success rounded-pill w-100">
                                <i class="fas fa-trophy me-1"></i> Посмотреть статистику
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Быстрые действия -->
    <div class="card border-0 rounded-4 shadow-sm">
        <div class="card-header bg-transparent border-0 pt-4">
            <h5 class="mb-0"><i class="fas fa-bolt me-2"></i> Быстрые действия</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <a href="/admin/products" class="btn btn-outline-primary w-100 rounded-pill">
                        <i class="fas fa-box me-1"></i> Товары
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/admin/orders" class="btn btn-outline-success w-100 rounded-pill">
                        <i class="fas fa-shopping-cart me-1"></i> Заказы
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/admin/article-categories" class="btn btn-outline-warning w-100 rounded-pill">
                        <i class="fas fa-folder me-1"></i> Категории
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/" class="btn btn-outline-secondary w-100 rounded-pill">
                        <i class="fas fa-home me-1"></i> На сайт
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Информация о проекте -->
    <div class="card border-0 rounded-4 shadow-sm mt-4">
        <div class="card-body text-center">
            <h6 class="text-muted mb-2">CoffeeTea Admin Panel</h6>
            <p class="small text-muted mb-0">
                Курсовой проект | E-commerce платформа для продажи кофе и чая
            </p>
            <p class="small text-muted">
                <i class="fas fa-code me-1"></i> ASP.NET Core 8.0 | PostgreSQL | Entity Framework Core
            </p>
        </div>
    </div>
</div>

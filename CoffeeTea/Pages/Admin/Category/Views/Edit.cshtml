@model CoffeeTea.Pages.Admin.Category.Controllers.AdminArticleCategoryController.Vm
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Id == 0 ? "Новая категория" : "Редактирование категории";
}
<div class="container py-5">
    <h1 class="h3 fw-bold mb-4">
        <i class="fas fa-tag me-2"></i> @ViewData["Title"]
    </h1>

    <form method="post" action="/admin/article-categories/save" class="card border-0 rounded-4 shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Название</label>
                <input name="name" class="form-control" value="@Model.Name" required maxlength="100" />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary rounded-pill px-4"><i class="fas fa-save me-2"></i> Сохранить</button>
                <a class="btn btn-outline-secondary rounded-pill px-4" href="/admin/article-categories">Отмена</a>
            </div>
        </div>
    </form>
</div>

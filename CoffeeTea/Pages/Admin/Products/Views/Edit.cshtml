@model CoffeeTea.Pages.Admin.Products.Models.AdminProductVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    bool isEdit = Model.Id.HasValue;
    ViewData["Title"] = isEdit ? $"Редактирование #{Model.Id}" : "Создание товара";
}
<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form method="post" action="@(isEdit ? $"/admin/products/{Model.Id}/edit" : "/admin/products/create")">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Название *</label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Тип *</label>
                <select class="form-select" asp-for="Type">
                    <option value="coffee">coffee</option>
                    <option value="tea">tea</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">SKU *</label>
                <input class="form-control" asp-for="Sku" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Цена *</label>
                <input class="form-control" asp-for="Price" type="number" step="0.01" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Кол-во *</label>
                <input class="form-control" asp-for="Quantity" type="number" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Image URL</label>
                <input class="form-control" asp-for="ImageUrl" />
            </div>

            <div class="col-md-12">
                <label class="form-label">Краткое описание</label>
                <textarea class="form-control" asp-for="Description" rows="2"></textarea>
            </div>

            <div class="col-md-3"><label class="form-label">Обжарка</label><input class="form-control" asp-for="RoastLevel" /></div>
            <div class="col-md-3"><label class="form-label">Обработка</label><input class="form-control" asp-for="Processing" /></div>
            <div class="col-md-3"><label class="form-label">Страна</label><input class="form-control" asp-for="OriginCountry" /></div>
            <div class="col-md-3"><label class="form-label">Регион</label><input class="form-control" asp-for="OriginRegion" /></div>

            <div class="col-md-6">
                <label class="form-label">Расширенное описание (HTML)</label>
                <textarea class="form-control" asp-for="LongDescription" rows="4"></textarea>
            </div>
            <div class="col-md-6">
                <label class="form-label">Как заваривать (HTML)</label>
                <textarea class="form-control" asp-for="BrewingGuide" rows="4"></textarea>
            </div>
            <div class="col-md-6">
                <label class="form-label">Вкусовые ноты</label>
                <input class="form-control" asp-for="FlavorNotes" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Происхождение (HTML)</label>
                <textarea class="form-control" asp-for="OriginDetails" rows="3"></textarea>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <a href="/admin/products" class="btn btn-outline-secondary">Назад</a>
            <button class="btn btn-primary" type="submit">Сохранить</button>
        </div>
    </form>
</div>

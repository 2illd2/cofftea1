@model CoffeeTea.Pages.Consultant.Models.ConsultantStatisticsVm
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Статистика";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold"><i class="fas fa-chart-line me-2"></i> Статистика продаж</h1>
        <div>
            <a href="/consultant/orders" class="btn btn-outline-primary rounded-pill me-2">
                <i class="fas fa-shopping-cart me-1"></i> Заказы
            </a>
            <a href="/consultant/articles" class="btn btn-outline-secondary rounded-pill">
                <i class="fas fa-newspaper me-1"></i> Статьи
            </a>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Общая статистика -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex p-3 mb-3">
                        <i class="fas fa-shopping-bag fa-2x text-primary"></i>
                    </div>
                    <h2 class="mb-1">@Model.TotalOrders</h2>
                    <p class="text-muted mb-0">Всего заказов</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex p-3 mb-3">
                        <i class="fas fa-ruble-sign fa-2x text-success"></i>
                    </div>
                    <h2 class="mb-1">@Model.TotalRevenue.ToString("N0") ₽</h2>
                    <p class="text-muted mb-0">Общая выручка</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 rounded-4 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-info bg-opacity-10 d-inline-flex p-3 mb-3">
                        <i class="fas fa-chart-line fa-2x text-info"></i>
                    </div>
                    <h2 class="mb-1">@Model.AverageOrderValue.ToString("N0") ₽</h2>
                    <p class="text-muted mb-0">Средний чек</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Заказы по статусам -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i> Заказы по статусам</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrdersByStatus.Any())
                    {
                        <div class="row g-3">
                            @foreach (var statusGroup in Model.OrdersByStatus)
                            {
                                var (color, icon) = statusGroup.Status switch
                                {
                                    "Новый" => ("primary", "clock"),
                                    "В обработке" => ("info", "cog"),
                                    "Отправлен" => ("warning", "shipping-fast"),
                                    "Завершён" => ("success", "check-circle"),
                                    "Отменён" => ("danger", "times-circle"),
                                    _ => ("secondary", "question")
                                };

                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-0 bg-@color bg-opacity-10">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-@color bg-opacity-25 p-3 me-3">
                                                    <i class="fas fa-@icon fa-lg text-@color"></i>
                                                </div>
                                                <div>
                                                    <h5 class="mb-0">@statusGroup.Count</h5>
                                                    <small class="text-muted">@statusGroup.Status</small>
                                                    <div class="fw-bold text-@color mt-1">@statusGroup.TotalAmount.ToString("N0") ₽</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Нет данных о заказах</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Топ товары -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <h5 class="mb-0"><i class="fas fa-trophy me-2"></i> Топ продаваемых товаров</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>Место</th>
                                        <th>Товар</th>
                                        <th class="text-center">Продано</th>
                                        <th class="text-end">Выручка</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int place = 1;
                                    }
                                    @foreach (var product in Model.TopProducts.Take(10))
                                    {
                                        var medalColor = place switch
                                        {
                                            1 => "gold",
                                            2 => "silver",
                                            3 => "#CD7F32",
                                            _ => "#ddd"
                                        };

                                        <tr>
                                            <td>
                                                <span class="badge rounded-circle p-2" style="background-color: @medalColor; width: 35px; height: 35px; display: inline-flex; align-items: center; justify-content: center;">
                                                    <strong>@place</strong>
                                                </span>
                                            </td>
                                            <td>
                                                <strong>@product.product_name</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@product.total_sold шт.</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-bold text-success">@product.revenue.ToString("N2") ₽</span>
                                            </td>
                                        </tr>
                                        place++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Нет данных о продажах</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Последние заказы -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i> Последние заказы</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Клиент</th>
                                        <th>Сумма</th>
                                        <th>Статус</th>
                                        <th>Дата</th>
                                        <th class="text-end">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td><strong>#@order.id</strong></td>
                                            <td>@order.Client</td>
                                            <td>
                                                <span class="fw-bold text-success">@order.total.ToString("N2") ₽</span>
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        "Новый" => "bg-primary",
                                                        "В обработке" => "bg-info",
                                                        "Отправлен" => "bg-warning text-dark",
                                                        "Завершён" => "bg-success",
                                                        "Отменён" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@order.Status</span>
                                            </td>
                                            <td>
                                                <small>@order.created_at.ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                            <td class="text-end">
                                                <a href="/orders/@order.id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i> Просмотр
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Нет последних заказов</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

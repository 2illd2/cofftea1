@model List<CoffeeTea.Pages.Orders.Models.OrderListItemVm>
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Мои заказы";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold"><i class="fas fa-shopping-bag me-2"></i> Мои заказы</h1>
        <a href="/catalog" class="btn btn-primary rounded-pill">
            <i class="fas fa-shopping-cart me-1"></i> Продолжить покупки
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="card border-0 rounded-4 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
                <h4 class="text-muted mb-3">У вас пока нет заказов</h4>
                <p class="text-muted mb-4">Начните с выбора товаров в нашем каталоге</p>
                <a href="/catalog" class="btn btn-primary btn-lg rounded-pill">
                    <i class="fas fa-store me-2"></i> Перейти в каталог
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model.OrderByDescending(o => o.created_at))
            {
                <div class="col-12">
                    <div class="card border-0 rounded-4 shadow-sm hover-shadow">
                        <div class="card-body p-4">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <div class="text-center">
                                        <div class="badge bg-light text-dark fs-6 mb-2">Заказ</div>
                                        <h4 class="mb-0">#@order.id</h4>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-1">Дата заказа</small>
                                    <div class="fw-bold">@order.created_at.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("ru-RU"))</div>
                                    <small class="text-muted">@order.created_at.ToString("HH:mm")</small>
                                </div>

                                <div class="col-md-2">
                                    <small class="text-muted d-block mb-1">Сумма</small>
                                    <div class="fs-5 fw-bold text-success">@order.total.ToString("N2") ₽</div>
                                </div>

                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-2">Статус</small>
                                    @{
                                        var (badgeClass, icon) = order.Status switch
                                        {
                                            "Новый" => ("bg-primary", "clock"),
                                            "В обработке" => ("bg-info", "cog"),
                                            "Отправлен" => ("bg-warning text-dark", "shipping-fast"),
                                            "Завершён" => ("bg-success", "check-circle"),
                                            "Отменён" => ("bg-danger", "times-circle"),
                                            _ => ("bg-secondary", "question")
                                        };
                                    }
                                    <span class="badge @badgeClass fs-6">
                                        <i class="fas fa-@icon me-1"></i>@order.Status
                                    </span>
                                </div>

                                <div class="col-md-2 text-end">
                                    <a href="/orders/@order.id" class="btn btn-outline-primary rounded-pill">
                                        <i class="fas fa-eye me-1"></i> Детали
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Сводка -->
        <div class="card border-0 rounded-4 shadow-sm mt-4">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fas fa-shopping-bag fa-2x text-primary mb-2"></i>
                            <div class="h3 mb-0">@Model.Count</div>
                            <small class="text-muted">Всего заказов</small>
                        </div>
                    </div>
                    <div class="col-md-4 border-start border-end">
                        <div class="p-3">
                            <i class="fas fa-ruble-sign fa-2x text-success mb-2"></i>
                            <div class="h3 mb-0">@Model.Sum(o => o.total).ToString("N0") ₽</div>
                            <small class="text-muted">Общая сумма</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fas fa-chart-line fa-2x text-info mb-2"></i>
                            <div class="h3 mb-0">@((Model.Sum(o => o.total) / Model.Count).ToString("N0")) ₽</div>
                            <small class="text-muted">Средний чек</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Статистика по статусам -->
        <div class="row g-3 mt-2">
            @foreach (var statusGroup in Model.GroupBy(o => o.Status))
            {
                var (color, icon) = statusGroup.Key switch
                {
                    "Новый" => ("primary", "clock"),
                    "В обработке" => ("info", "cog"),
                    "Отправлен" => ("warning", "shipping-fast"),
                    "Завершён" => ("success", "check-circle"),
                    "Отменён" => ("danger", "times-circle"),
                    _ => ("secondary", "question")
                };

                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 rounded-4 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-@icon fa-3x text-@color mb-3"></i>
                            <h4 class="mb-1">@statusGroup.Count()</h4>
                            <small class="text-muted">@statusGroup.Key</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

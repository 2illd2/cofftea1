@using CoffeeTea.Pages.Favorites.Models
@using System.Globalization
@{
    var ru = CultureInfo.GetCultureInfo("ru-RU");
}
@model FavoritesVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Pages/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Избранное";
}
<div class="container py-5">
    <h1 class="h3 fw-bold mb-4">Избранное</h1>

    @if (TempData["FavoritesError"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    @if (!Model.Items.Any())
    {
        <div class="card border-0 bg-light rounded-4 p-5 text-center">
            <div class="mb-4">
                <i class="fas fa-heart text-muted" style="font-size: 4rem;"></i>
            </div>
            <p class="lead mb-4">В избранном пока ничего нет</p>
            <a class="btn btn-primary rounded-pill px-4" href="/catalog">
                <i class="fas fa-store me-2"></i> Перейти в каталог
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th></th>
                        <th>Товар</th>
                        <th>Тип</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td style="width:80px;">
                                <img src="@(item.ImageUrl ?? "/img/placeholder.png")"
                                     class="img-fluid rounded"
                                     style="max-width:70px; height:70px; object-fit:cover;" />
                            </td>
                            <td>
                                <a href="/catalog/@item.Id" class="text-decoration-none text-dark fw-semibold">
                                    @item.Name
                                </a>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">@item.Type</span>
                            </td>
                            <td class="fw-bold">
                                @(item.Price > 0
                                    ? item.Price.ToString("C0", ru)      
                                    : "—")
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/catalog/@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i> Подробнее
                                    </a>
                                    <form method="post" action="/favorites/remove" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit"
                                                title="Удалить из избранного">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted">
                Всего товаров: <strong>@Model.Items.Count</strong>
            </div>

            <div class="d-flex gap-2">
                <form method="post" action="/favorites/clear">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-trash me-1"></i> Очистить избранное
                    </button>
                </form>

                <a href="/catalog" class="btn btn-primary">
                    <i class="fas fa-store me-1"></i> Продолжить покупки
                </a>
            </div>
        </div>
    }
</div>